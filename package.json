    "@fortawesome/react-fontawesome": "^0.2.2",
    "cra-template": "1.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.1",
    "react-scripts": "^5.0.1",
    "react-spinners": "^0.15.0",
    "express": "^4.18.2"
